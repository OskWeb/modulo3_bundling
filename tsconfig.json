{
    "compilerOptions": {
      "typeRoots": [
        "./types",
        "./node_modules/@types"
      ],
      "target": "es6",
      "module": "es6",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "jsx": "react",
      "noLib": false,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": ["./src/**/*", "./types/**/*"],
    "exclude": ["/node_modules"]
}